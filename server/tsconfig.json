{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@server/*": ["server/src/*"],
      "@shared/*": ["shared/*"],
      "@drizzle/*": ["drizzle/*"]
    },
    "types": ["node"]
  },
  "include": ["src", "../shared/**/*", "../drizzle/**/*"],
  "exclude": ["dist", "node_modules"]
}
