{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"],
      "@drizzle/*": ["drizzle/*"],
      "@client/*": ["client/*"]
    },
    "types": ["node"]
  },
  "include": ["./**/*", "../shared/**/*", "../drizzle/**/*"],
  "exclude": ["dist", "node_modules", "scripts/**/*", "vitest.config.ts"]
}
